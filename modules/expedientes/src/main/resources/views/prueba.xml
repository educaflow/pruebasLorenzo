<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://axelor.com/xml/ns/object-views"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

    <action-record name="eventPRESENTAR" model="com.educaflow.apps.expedientes.db.Expediente">
        <field name="currentEvent" expr="PRESENTAR"/>
    </action-record>
    <action-record name="eventSUBSANAR" model="com.educaflow.apps.expedientes.db.Expediente">
        <field name="currentEvent" expr="SUBSANAR"/>
    </action-record>
    <action-record name="eventACEPTAR" model="com.educaflow.apps.expedientes.db.Expediente">
        <field name="currentEvent" expr="ACEPTAR"/>
    </action-record>
    <action-record name="eventRECHAZAR" model="com.educaflow.apps.expedientes.db.Expediente">
        <field name="currentEvent" expr="RECHAZAR"/>
    </action-record>

    <form name="form-expediente-prueba-estado-inicial-form" canSave="false" canBack="false" canAttach="false" canMore="false" canNew="false" title="Prueba Estado inicial" model="com.educaflow.apps.expedientes.db.Prueba" groups="admins,users" onNew="datos-iniciales">

        <panel colSpan="12">
            <panel colSpan="8">
                <field name="tipoExpediente.name" title="Nombre" readonly="true" colSpan="6"/>
                <field name="createdBy.name" title="Creado por" readonly="true" colSpan="6"/>
                <field name="nameState" readonly="true" colSpan="3"/>
                <field name="fechaUltimoEstado" readonly="true" colSpan="3"/>

            </panel>
            <panel colSpan="4" itemSpan="12">
                <button name="PRESENTAR" title="Guardar" onClick="eventPRESENTAR,save,action-event-view-expediente"/>
                <button name="Borrar" css="btn-danger" title="Borrar" onClick="action-event-borrar-expediente"  prompt="¿Está seguro que desea borrar el expediente?"/>
                <button name="mostrar-historial-estados" icon="assignment" title="Historial Eventos" css="btn-default" onClick="action-grid-expediente-historial-estados" colSpam="2"/>
            </panel>
        </panel>

        <panel title="Datos Solicitante">
            <field name="solicita" colSpan="11"/>
            <field name="justificante" type="binary" widget="file" colSpan="1"/>
        </panel>


    </form>


    <form name="form-expediente-prueba-revision-form" title="Prueba Estado inicial" model="com.educaflow.apps.expedientes.db.Prueba" groups="admins,users">

        <panel colSpan="12">
            <panel colSpan="8">
                <field name="tipoExpediente.name" title="Nombre" readonly="true" colSpan="6"/>
                <field name="createdBy.name" title="Creado por" readonly="true" colSpan="6"/>
                <field name="nameState" readonly="true" colSpan="3"/>
                <field name="fechaUltimoEstado" readonly="true" colSpan="3"/>

            </panel>
            <panel colSpan="4" itemSpan="12">
                <button name="ACEPTAR" title="Aceptar" onClick="eventACEPTAR,save,action-event-view-expediente"/>
                <button name="RECHAZAR" title="Rechazar" css="btn-danger" onClick="eventRECHAZAR,save,action-event-view-expediente" prompt="¿Esta seguro que desea recharlo?"/>
                <button name="SUBSANAR" title="Subsanar información" onClick="eventSUBSANAR,save,action-event-view-expediente"/>
                <button name="mostrar-historial-estados" icon="assignment" title="Historial Eventos" css="btn-default" onClick="action-grid-expediente-historial-estados" colSpam="2"/>
            </panel>
        </panel>

        <panel title="Datos Solicitante">
            <field name="solicita" colSpan="11" readonly="true"/>
            <field name="justificante" type="binary" widget="file" colSpan="1" readonly="true"/>
        </panel>

        <panel title="Datos Resolución">
            <field name="motivo" colSpan="12"/>
        </panel>


    </form>

    <form name="form-expediente-prueba-aceptado-form" title="Prueba Estado inicial" model="com.educaflow.apps.expedientes.db.Prueba" groups="admins,users">
        <panel colSpan="12">
            <panel colSpan="8">
                <field name="tipoExpediente.name" title="Nombre" readonly="true" colSpan="6"/>
                <field name="createdBy.name" title="Creado por" readonly="true" colSpan="6"/>
                <field name="nameState" readonly="true" colSpan="3"/>
                <field name="fechaUltimoEstado" readonly="true" colSpan="3"/>

            </panel>
            <panel colSpan="4" itemSpan="12">
                <button name="SUBSANAR" title="Reabrir" onClick="eventSUBSANAR,save,action-event-view-expediente"/>
                <button name="mostrar-historial-estados" icon="assignment" title="Historial Eventos" css="btn-default" onClick="action-grid-expediente-historial-estados" colSpam="2"/>
            </panel>
        </panel>

        <panel title="Datos Solicitante">
            <field name="solicita" colSpan="11" readonly="true"/>
            <field name="justificante" type="binary" widget="file" colSpan="1" readonly="true"/>
        </panel>

        <panel title="Datos Resolución">
            <field name="motivo" colSpan="12" readonly="true"/>
        </panel>
    </form>

    <form name="form-expediente-prueba-rechazado-form" title="Prueba Estado inicial" model="com.educaflow.apps.expedientes.db.Prueba" groups="admins,users">

        <panel colSpan="12">
            <panel colSpan="8">
                <field name="tipoExpediente.name" title="Nombre" readonly="true" colSpan="6"/>
                <field name="createdBy.name" title="Creado por" readonly="true" colSpan="6"/>
                <field name="nameState" readonly="true" colSpan="3"/>
                <field name="fechaUltimoEstado" readonly="true" colSpan="3"/>

            </panel>
            <panel colSpan="4" itemSpan="12">
                <button name="SUBSANAR" title="Reabrir" onClick="eventSUBSANAR,save,action-event-view-expediente"/>
                <button name="mostrar-historial-estados" icon="assignment" title="Historial Eventos" css="btn-default" onClick="action-grid-expediente-historial-estados" colSpam="2"/>
            </panel>
        </panel>

        <panel title="Datos Solicitante">
            <field name="solicita" colSpan="11" readonly="true"/>
            <field name="justificante" type="binary" widget="file" colSpan="1" readonly="true"/>
        </panel>

        <panel title="Datos Resolución">
            <field name="motivo" colSpan="12" readonly="true"/>
        </panel>
    </form>

</object-views>