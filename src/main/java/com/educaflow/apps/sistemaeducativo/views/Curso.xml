<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_7.4.xsd">

    <action-view name="mant-Curso-action" title="Cursos" model="com.educaflow.apps.sistemaeducativo.db.Curso">
        <view type="grid" name="mant-Curso-grid"/>
        <view type="form" name="mant-Curso-form"/>
        <view-param name="forceEdit" value="true"/>
    </action-view>

    <grid name="mant-Curso-grid" title="Curso" model="com.educaflow.apps.sistemaeducativo.db.Curso"
          groups="admins"
          editable="false" edit-icon="false" x-selector="none" canNew="true" canEdit="false" canDelete="false" canSave="false" canViewOnClick="true"
    >
        <hilite color="danger" if="archived"/>
        <field name="code" width="150px" />
        <field name="name" />
        <field name="archived" width="100px" />
    </grid>

    <form name="mant-Curso-form" title="Curso" model="com.educaflow.apps.sistemaeducativo.db.Curso"
          groups="admins"
          width="large" canAttach="false" canBack="false" canBackOnSave="true" canDelete="true" canNew="false" >
        <panel name="Curso" title="">
            <field name="code" colSpan="3" />
            <field name="name" colOffset="9"  colSpan="6"/>
            <field name="ciclo" colOffset="6" colSpan="6" />
        </panel>
    </form>

    <grid name="search-Curso-grid" title="Curso" model="com.educaflow.apps.sistemaeducativo.db.Curso"
          groups="admins,users"
          orderBy="name"
          editable="false" edit-icon="false" x-selector="none" canNew="false" canEdit="false" canDelete="false" canSave="false" canViewOnClick="true">
        <field name="name" />
    </grid>

    <form name="view-Curso-form" title="Curso" model="com.educaflow.apps.sistemaeducativo.db.Curso"
          groups="admins"
          width="large" canAttach="false" canBack="false" canBackOnSave="true" canDelete="true" canNew="false" >
        <panel name="Curso" title="">
            <field name="code" colSpan="3" readonly="true" />
            <field name="name" colOffset="9"  colSpan="6" readonly="true"/>
            <field name="ciclo" colOffset="6" colSpan="6" readonly="true" />
        </panel>
    </form>

</object-views>
