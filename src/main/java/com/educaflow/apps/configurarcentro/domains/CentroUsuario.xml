<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://axelor.com/xml/ns/domain-models https://axelor.com/xml/ns/domain-models/domain-models_7.4.xsd">

    <module name="sistemaeducativo" package="com.educaflow.apps.sistemaeducativo.db"/>
    <entity name="CentroUsuario">
        <many-to-one name="centro" ref="com.educaflow.apps.sistemaeducativo.db.Centro" required="true"/>
        <many-to-one name="usuario" ref="com.axelor.auth.db.User" required="true"/>
        <enum name="tipoUsuario" ref="TipoUsuario" required="true"/>
        <many-to-many name="departamentos" ref="com.educaflow.apps.sistemaeducativo.db.Departamento"/>
        <many-to-many name="cargos" ref="com.educaflow.apps.sistemaeducativo.db.Cargo"/>
    </entity>

    <enum name="TipoUsuario">
        <item name="PROFESOR" title="Docente"/>
        <item name="ALUMNO" title="Estudiante"/>
        <item name="ADMINISTRATIVO" title="Administración"/>
        <item name="CONSERJE" title="Conserjería"/>
        <item name="EXTERNO" title="Visitante"/>
    </enum>

</domain-models>